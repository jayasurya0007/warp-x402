{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "files": [
    "src/index.ts",
    "src/core/Config.ts",
    "src/core/SenderClient.ts",
    "src/core/ReceiverClient.ts",
    "src/core/Warp402.ts",
    "src/types/index.ts",
    "src/types/config.ts",
    "src/types/network.ts",
    "src/types/receipt.ts",
    "src/utils/index.ts",
    "src/utils/contracts.ts",
    "src/utils/encoding.ts",
    "src/utils/logger.ts",
    "src/utils/uuid.ts",
    "src/cli/index.ts",
    "src/cli/deploy.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "test"
  ]
}
